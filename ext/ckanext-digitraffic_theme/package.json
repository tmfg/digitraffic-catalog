{
  "type": "module",
  "scripts": {
    "postinstall": "cd node_modules/@fintraffic/fds-coreui-components && npm install --no-save && mkdir -p dist && npx tsc src/**/*.ts src/*.ts --declaration --outDir dist --skipLibCheck --target es2019 --module es2020 --moduleResolution node --allowSyntheticDefaultImports --experimentalDecorators --noImplicitOverride",
    "bundle": "npm run bundle-ts & npm run bundle-sass",
    "bundle-ts": "rollup -c",
    "bundle-sass": "npm run override-ckan-default-variables && npm run copy-bootstrap-icons && npm run sass-task && npm run postcss-task",
    "copy-bootstrap-icons": "mkdir -p ckanext/digitraffic_theme/public/fonts && cp node_modules/bootstrap-icons/font/fonts/* ckanext/digitraffic_theme/public/fonts/",
    "override-ckan-default-variables": "mkdir -p ./tmp/ckan_base && cp -R ./node_modules/ckan/ckan/public/base/* ./tmp/ckan_base && cp ./src/sass/override_ckan/_variables.scss ./tmp/ckan_base/scss",
    "sass-task": "sass --no-source-map --load-path=node_modules src/sass/digitraffic_theme.scss ckanext/digitraffic_theme/assets/css/digitraffic-theme.css",
    "postcss-task": "postcss ckanext/digitraffic_theme/assets/css/digitraffic-theme.css --no-map --replace",
    "e2e": "playwright test",
    "e2e-ui": "playwright test --ui",
    "e2e-codegen": "playwright codegen"
  },
  "dependencies": {
    "@fintraffic/fds-coreui-components": "github:fintraffic-design/fds-coreui-components#d1b835d0a6be1c83c7e74a91dfbcf43f5f39285e",
    "@fintraffic/fds-coreui-css": "^0.1.3",
    "bootstrap-icons": "^1.13.1",
    "lucide": "^0.544.0",
    "lucide-static": "^0.544.0"
  },
  "devDependencies": {
    "@date-fns/tz": "^1.4.1",
    "@playwright/test": "^1.55.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "~0.4.4",
    "@rollup/plugin-typescript": "~12.1.4",
    "@types/jquery": "^3.5.33",
    "@types/node": "^24.3.1",
    "autoprefixer": "^10.4.21",
    "ckan": "github:ckan/ckan#ckan-2.11.3",
    "cssnano": "^7.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "jquery": "^3.7.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-url": "^10.1.3",
    "rollup": "^4.50.1",
    "sass": "^1.92.1",
    "tslib": "^2.8.1",
    "typescript": "~5.9.2"
  }
}